#include <Wire.h>
#include <Adafruit_INA219.h>
#include <LiquidCrystal.h>

// LCD pins: RS, EN, D4, D5, D6, D7
const int rs = 12, en = 11, d4 = 5, d5 = 4, d6 = 3, d7 = 2;
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);

// INA219 setup
Adafruit_INA219 ina219;

// Battery capacity
const float batteryCapacity = 3200.0; // mAh

// Charge tracking
float chargeUsed = 0.0;
unsigned long lastTime = 0;

void setup() {
  Serial.begin(9600);
  ina219.begin();
  lcd.begin(16, 2);
  lcd.clear();
  lastTime = millis();
}

void loop() {
  // Time management
  unsigned long currentTime = millis();
  float elapsedTime = (currentTime - lastTime) / 1000.0; // seconds
  lastTime = currentTime;

  // Read current (mA)
  float current_mA = ina219.getCurrent_mA();

  // Coulomb counting
  if (current_mA > 0) {
    chargeUsed += (current_mA * elapsedTime) / 3600.0; // mAh
  }

  // Calculate SoC
  float soc = 100.0 - (chargeUsed / batteryCapacity * 100.0);
  soc = constrain(soc, 0, 100); // Clamp between 0â€“100%

  // Display on LCD
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("SoC: ");
  lcd.print(soc, 1);
  lcd.print("%");

  lcd.setCursor(0, 1);
  lcd.print("Used: ");
  lcd.print(chargeUsed, 1);
  lcd.print("mAh");

  delay(1000);
}
Using Coulomb counting methos soc and charge used by laod
